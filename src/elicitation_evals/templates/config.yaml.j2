default_model: {{ model }}
openai:
  api_key: ${OPENAI_API_KEY}
  temperature: {{ temperature }}

mcp:
  servers:
    {%- for class_name in involved_classes %}
    {{ class_name.lower().replace('api', '_api') }}:
      command: python
      args:
        - {{ server_script_path }}
        - {{ class_name }}
        {%- if class_name in initial_configs %}
        - {{ test_data_path }}
        - {{ test_id }}
        {%- endif %}
    {%- endfor %}

logger:
  level: debug
  type: file
  path: {{ log_path }}
  show_chat: true
  show_tools: true
  truncate_tools: false
  progress_display: false